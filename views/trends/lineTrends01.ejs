  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  
  <script>
    const labels = [
      'Green',
      'Gold',
      'Silver',
    ];
  
    const data = {
      labels: labels,
      datasets: [{
        color: 'rgb(0, 0, 0)',
        label: 'Line Trend Data',
        backgroundColor:[
         'rgb(89,248,89)',
         'rgb(255, 223, 0)',
         'rgb(192, 192, 192)'
      ]
      ,
        borderColor: 'rgb(0, 0, 0)',
        data: 
        [<%=avgRiders['Green']%>,
        <%=avgRiders['Gold']%>,
        <%=avgRiders['Silver']%>],
      }]
    };  

    const config = {
      type: 'pie',
      data: data,
      options: {
         
         layout:{
               padding:{
                   right:200,
                   top: 75
               }
           },
         "responsive": true,
         "maintainAspectRatio": false
         
 
       }
    };
  </script>

<script>
    const myChart = new Chart(
      document.getElementById('myChart'),
      config
    );
  </script>
